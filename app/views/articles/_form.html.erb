<% if @article.errors.any? %>
  <!-- ponisze zostanie wyswietlone tylko w momencie znalezienia błędu -->
  <h2>The following errors prevented the article from getting created</h2>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%=msg%></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <!-- literacja przez zmienna @article, umozliwiamy wprowadzenie danych do zmiennej, ciekawe jest to ze Rails domysla sie co chcemy zrobic po wcisinięciu submit -->
  <p>
  <%= f.label :title %></br>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :description %></br>
  <%= f.text_area :description %></br>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>
<%=link_to "Back to article listing", articles_path %>

