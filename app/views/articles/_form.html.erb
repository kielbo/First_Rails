

<%= render 'shared/errors',obj:@article %>

<div class="form-group row">
  <div class="col-md-12">
    <%= form_for( @article,:html => {role:"form"}) do |f| %>

      <div class="form-group row">
          <%= f.label :title, class:"col-md-6 col-form-label" %></br>
        <div class="col-sm-8">
          <%=f.text_field :title, class:"form-control",placeholder:"Title of article",autofocus:true %>
        </div>
      </div>

      <div class="form-group row">
          <%= f.label :description,class:"col-form-label col-md-6"%>
        <div class="col-sm-8">
          <%= f.text_area :description, rows:10, class:"form-control",placeholder:"Body of article" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class:'btn btn-primary btn-lg'%>
          </div>
      </div>

    <% end %>
    <div class= "col-xs-4 col-xs-offset-4">
      [ <%=link_to "Cancel request and return to article listing", articles_path %>]

    </div>
    </div>
    </div>
