<h1 align="center" color="black">Article Title:<%= @article.title %><h1>
    <div class="card col-sm-8 offset-sm-2">
      <h4 class="center description"><strong>Description:</strong>
      </h4>
      <hr>
      <%= simple_format(@article.description,class:"center")%>
      <div class="article-actions text-center">
        <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-xs btn-primary" %>
        <%= link_to "Delete this article",article_path(@article),method: :delete, data:{confirm: "Are You sure ?"}, class:"btn btn-xs btn-danger" %>
        <%= link_to "View all articles", article_path, class:"btn btn-xs btn-success"%> 
      </div>
    </div>
