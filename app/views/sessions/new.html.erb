<h1 align="center">Login</h1>

<%= form_for(:session,:html=>{class:"col-sm-10 offset-sm-1",role:"form"},url:login_path)do|f| %>
  <div class="form-group row">
    <%= f.label :email, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.email_field:email,class:"form-control",placeholder:"Enter email",autofocus:true %>
    </div>
  </div>
<div class="form-group row">
    <%= f.label :password, class:"col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= f.password_field:password,class:"form-control",placeholder:"Enter password",autocomplate:"off" %>
      </div>
</div>
      <div class="form-group row">
        <%= f.submit "Log in",class:"btn btn-primary btn-lg center"%>
      </div>
      </div>
    <% end %>
